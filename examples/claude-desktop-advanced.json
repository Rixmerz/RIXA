{
  "mcpServers": {
    "rixa": {
      "command": "node",
      "args": ["/path/to/your/RIXA/dist/index.js"],
      "env": {
        // Security Configuration
        "RIXA_AUTH_ENABLED": "true",
        "RIXA_AUTH_TOKENS": "primary-token-2025,backup-token-2025",
        
        // Filesystem Security
        "RIXA_FS_ALLOWED_PATHS": "/Users/yourname/projects:/Users/yourname/workspace:/opt/development",
        "RIXA_FS_READ_ONLY": "false",
        "RIXA_FS_MAX_FILE_SIZE": "52428800",
        "RIXA_FS_EXCLUDE_PATTERNS": "node_modules/**,*.log,.git/**,dist/**,build/**,coverage/**",
        
        // Performance & Limits
        "RIXA_RATE_LIMIT_ENABLED": "true",
        "RIXA_RATE_LIMIT_MAX_REQUESTS": "200",
        "RIXA_RATE_LIMIT_WINDOW_MS": "60000",
        "RIXA_MAX_SESSIONS": "10",
        "RIXA_DAP_TIMEOUT": "45000",
        
        // Logging & Monitoring
        "RIXA_LOG_LEVEL": "debug",
        "RIXA_LOG_FORMAT": "json",
        "RIXA_LOG_FILE": "/Users/yourname/logs/rixa.log",
        
        // Server Configuration
        "RIXA_PORT": "3000",
        "RIXA_HOST": "localhost"
      }
    }
  }
}
