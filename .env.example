# RIXA Configuration Example
# Copy this file to .env and modify as needed

# Server Configuration
RIXA_PORT=3000
RIXA_HOST=localhost
RIXA_CORS_ENABLED=true
RIXA_CORS_ORIGINS=*

# Authentication Configuration
RIXA_AUTH_ENABLED=true
RIXA_AUTH_TOKENS=your-secret-token-here,another-token
RIXA_SESSION_TIMEOUT=3600

# Filesystem Configuration
RIXA_FS_READ_ONLY=true
RIXA_FS_ALLOWED_PATHS=/path/to/your/project,/another/allowed/path
RIXA_FS_MAX_FILE_SIZE=10485760
RIXA_FS_EXCLUDE_PATTERNS=node_modules/**,.git/**,dist/**,*.log

# DAP Configuration
RIXA_DAP_DEFAULT_ADAPTER=node
RIXA_DAP_TIMEOUT=30000

# Logging Configuration
RIXA_LOG_LEVEL=info
RIXA_LOG_FORMAT=json
RIXA_LOG_FILE_ENABLED=false
RIXA_LOG_FILE_PATH=./logs/rixa.log
RIXA_LOG_FILE_MAX_SIZE=10485760
RIXA_LOG_FILE_MAX_FILES=5
